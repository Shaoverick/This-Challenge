<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="repoListVM"
            type="com.example.passporter.view.repoList.RepoListVM" />

        <variable
            name="repoListRVAdapter"
            type="com.example.passporter.view.repoList.adapter.RepoRVAdapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.repoList.RepoListFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRepoList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/recyclerview_background"
            app:addRepoList="@{repoListVM.repoList.peekContent()}" />

        <ProgressBar
            android:id="@+id/donutProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>